<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="58.1dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:maxWidth="184dp"
            android:paddingLeft="10dp"
            android:paddingRight="14dp"
            android:textColor="#4b4a4f"
            android:textSize="13sp"
            tools:text="中华人民共和国万岁 中央人民政府万岁" />

        <LinearLayout
            android:id="@+id/nav_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#bda45a"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/map_nav" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:text="@string/map_nav"
                android:textColor="#FFF"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="8.1dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/map_triangle_pointer" />

</LinearLayout>